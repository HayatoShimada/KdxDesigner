<Window x:Class="KdxDesigner.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KdxDesigner.ViewModels"
        Title="KDX Designer" Height="700" Width="1080">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <!-- メニューバー -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_ファイル">
                <MenuItem Header="設定を開く" Command="{Binding OpenSettingsCommand}" />
                <Separator />
                <MenuItem Header="終了" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="_編集">
                <MenuItem Header="操作を保存" Command="{Binding SaveOperationCommand}" />
            </MenuItem>
            <MenuItem Header="_表示">
                <MenuItem Header="リロード" Command="{Binding ReloadCommand}" />
            </MenuItem>
        </Menu>

        <!-- コンテンツエリア -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <!-- フィルター選択エリア -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>

                    <ColumnDefinition Width="Auto"/>

                </Grid.ColumnDefinitions>

                <TextBlock Text="Company:" VerticalAlignment="Center" Margin="5" Grid.Column="0"/>
                <ComboBox ItemsSource="{Binding Companies}" SelectedItem="{Binding SelectedCompany}" DisplayMemberPath="CompanyName" Grid.Column="1"/>

                <TextBlock Text="Model:" VerticalAlignment="Center" Margin="5" Grid.Column="2"/>
                <ComboBox ItemsSource="{Binding Models}" SelectedItem="{Binding SelectedModel}" DisplayMemberPath="ModelName" Grid.Column="3"/>

                <TextBlock Text="PLC:" VerticalAlignment="Center" Margin="5" Grid.Column="4"/>
                <ComboBox ItemsSource="{Binding Plcs}" SelectedItem="{Binding SelectedPlc}" DisplayMemberPath="PlcName" Grid.Column="5"/>

                <TextBlock Text="Cycle:" VerticalAlignment="Center" Margin="5" Grid.Column="6"/>
                <ComboBox ItemsSource="{Binding Cycles}" SelectedItem="{Binding SelectedCycle}" DisplayMemberPath="CycleName" Grid.Column="7"/>
                
                <Button Content="メモリ編集" Grid.Column="8" Margin="210,0,0,0"
        Width="100" Height="22" VerticalAlignment="Center"
        Command="{Binding OpenMemoryEditorCommand}" />


            </Grid>

            <!-- 工程一覧 -->
            <GroupBox Header="工程一覧" Grid.Row="1">
                <DataGrid x:Name="ProcessGrid"
                      ItemsSource="{Binding Processes}"
                      SelectionMode="Extended"
                      SelectionUnit="FullRow"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionChanged="ProcessGrid_SelectionChanged"
                      Margin="5"/>

            </GroupBox>

            <!-- 工程詳細 -->
            <GroupBox Header="工程詳細" Grid.Row="2" Margin="0,10,0,0">
                <DataGrid ItemsSource="{Binding ProcessDetails}"
                          SelectedItem="{Binding SelectedProcessDetail}"
                          SelectionChanged="DetailGrid_SelectionChanged"
                          AutoGenerateColumns="True"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Margin="5"/>
            </GroupBox>

            <!-- Operation -->
            <GroupBox Header="選択中 Operation" Grid.Row="3" Margin="0,10,0,0">
                <DataGrid ItemsSource="{Binding SelectedOperations}" 
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  Margin="5" />
            </GroupBox>

            <!-- 下部ボタン -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="工程出力" Command="{Binding ProcessOutputCommand}" Width="100" Margin="5"/>
            </StackPanel>

            <GroupBox Grid.Row="5" Header="出力エラー一覧" Margin="0,10,0,0">
                <DataGrid ItemsSource="{Binding OutputErrors}"
              AutoGenerateColumns="False"
              IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="工程名" Binding="{Binding DetailName}" />
                        <DataGridTextColumn Header="プロセスID" Binding="{Binding ProcessId}" />
                        <DataGridTextColumn Header="メッセージ" Binding="{Binding Message}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

        </Grid>
    </DockPanel>
</Window>
