<Window x:Class="KdxDesigner.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KdxDesigner.ViewModels"
        Title="KDX Designer" Height="1000" Width="1920">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <!-- メニューバー -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_ファイル">
                <MenuItem Header="設定を開く" Command="{Binding OpenSettingsCommand}" />
                <Separator />
                <MenuItem Header="終了" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="_編集">
                <MenuItem Header="操作を保存" Command="{Binding SaveOperationCommand}" />
            </MenuItem>
            <MenuItem Header="_表示">
                <MenuItem Header="リロード" Command="{Binding ReloadCommand}" />
            </MenuItem>
        </Menu>

        <!-- コンテンツエリア -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- フィルター選択エリア -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!--Companyセレクタ-->
                <TextBlock 
                    Text="Company:" 
                    VerticalAlignment="Center" 
                    Margin="5" 
                    Grid.Column="0" 
                    Grid.Row="0"/>
                <ComboBox 
                    ItemsSource="{Binding Companies}" 
                    SelectedItem="{Binding SelectedCompany}" 
                    Margin="5"
                    DisplayMemberPath="CompanyName" 
                    Grid.Column="1" 
                    Grid.Row="0"/>

                <!--Modelセレクタ-->
                <TextBlock 
                    Text="Model:" 
                    VerticalAlignment="Center" 
                    Margin="5" 
                    Grid.Column="0" 
                    Grid.Row="1"/>
                <ComboBox 
                    ItemsSource="{Binding Models}" 
                    SelectedItem="{Binding SelectedModel}" 
                    Margin="5"
                    DisplayMemberPath="ModelName" 
                    Grid.Column="1"
                    Grid.Row="1"/>

                <!--PLCセレクタ-->
                <TextBlock 
                    Text="PLC:" 
                    VerticalAlignment="Center" 
                    Margin="5" 
                    Grid.Column="0"
                    Grid.Row="2"/>
                <ComboBox 
                    ItemsSource="{Binding Plcs}" 
                    SelectedItem="{Binding SelectedPlc}" 
                    DisplayMemberPath="PlcName" 
                    Margin="5"
                    Grid.Column="1"
                    Grid.Row="2"/>
                <Button 
                    Content="メモリ編集" 
                    Grid.Column="2"
                    Grid.Row="2"
                    Margin="5"
                    Width="100" Height="22" 
                    VerticalAlignment="Center"
                    Command="{Binding OpenMemoryEditorCommand}" />

            </Grid>

            <!-- 工程一覧 -->
            <GroupBox 
                Header="工程一覧" 
                Grid.Row="1">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--サイクル選択-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0">
                        <TextBlock 
                            Width="Auto"
                            Text="Cycle:" 
                            VerticalAlignment="Center" 
                            Margin="5"/>
                        <ComboBox 
                            Width="200"
                            ItemsSource="{Binding Cycles}" 
                            SelectedItem="{Binding SelectedCycle}" 
                            DisplayMemberPath="CycleName" />
                    </StackPanel>

                    <!--テーブル表示-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1">
                        <!--プロセステーブル-->
                        <DataGrid 
                            x:Name="ProcessGrid"
                            ItemsSource="{Binding Processes}"
                            SelectionMode="Extended"
                            SelectionUnit="FullRow"
                            AutoGenerateColumns="True"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            SelectionChanged="ProcessGrid_SelectionChanged"
                            Margin="5"/>

                        <!--プロセス詳細テーブル-->
                        <DataGrid 
                            ItemsSource="{Binding ProcessDetails}"
                            SelectedItem="{Binding SelectedProcessDetail}"
                            SelectionChanged="DetailGrid_SelectionChanged"
                            AutoGenerateColumns="True"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            Margin="5"/>

                        <!--オペレーションテーブル-->
                        <DataGrid 
                            ItemsSource="{Binding SelectedOperations}" 
                            AutoGenerateColumns="True"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            IsReadOnly="False"
                            HeadersVisibility="Column"
                            Margin="5" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- 左寄せ：TextBox を横並びに -->
            <StackPanel 
                Orientation="Horizontal" 
                HorizontalAlignment="Center"
                Grid.Row="4">
                <GroupBox 
                        Header="出力エラー一覧" 
                        Margin="0,0,0,0" 
                        Width="1020">
                    <DataGrid
                            ItemsSource="{Binding OutputErrors}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            MaxHeight="300px">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="工程名" Binding="{Binding RecordName}" />
                            <DataGridTextColumn Header="ニモニックID" Binding="{Binding MnemonicId}" />
                            <DataGridTextColumn Header="プロセスID" Binding="{Binding RecordId}" />
                            <DataGridTextColumn Header="メッセージ" Binding="{Binding Message}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <GroupBox
                    Header="出力エラー一覧" 
                    Margin="0,0,0,0" 
                    Width="600px">
                    <Grid Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <!-- -->
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!--csvの出力中に発生したエラー一覧を表示-->


                        <TextBlock 
                            Text="Lデバイス[工程]" 
                            Margin="5" 
                            Grid.Row="0"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding ProcessDeviceStartL, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Right" 
                            Grid.Row="0"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsProcessMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="0"
                            Grid.Column="2"/>

                        <TextBlock 
                            Text="Lデバイス[工程詳細]" 
                            Margin="5"                                       
                            Grid.Row="1"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding DetailDeviceStartL, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Left" 
                            Grid.Row="1"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsDetailMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="1"
                            Grid.Column="2"/>

                        <TextBlock 
                            Text="Mデバイス[操作]" 
                            Margin="5"
                            Grid.Row="2"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding OperationDeviceStartM, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Left"
                            Grid.Row="2"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsOperationMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="2"
                            Grid.Column="2"/>

                        <TextBlock 
                            Text="Mデバイス[出力]" 
                            Margin="5"
                            Grid.Row="3"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding CylinderDeviceStartM, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Left" 
                            Grid.Row="3"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsCylinderMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="3"
                            Grid.Column="2"/>

                        <TextBlock 
                            Text="Mデバイス[エラー]" 
                            Margin="5"
                            Grid.Row="4"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding ErrorDeviceStartM, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Left"
                            Grid.Row="4"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsErrorMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="4"
                            Grid.Column="2"/>

                        <TextBlock 
                            Text="Tデバイス[タイマ]" 
                            Margin="5"
                            Grid.Row="5"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding DeviceStartT, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Left"
                            Grid.Row="5"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsTimerMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="5"
                            Grid.Column="2"/>

                        <TextBlock 
                            Text="ZRデバイス[工程タイム現在]"
                            Margin="5"
                            Grid.Row="6"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding ProsTimeStartZR, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Left"
                            Grid.Row="6"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsProsTimeMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="6"
                            Grid.Column="2"/>

                        <TextBlock 
                            Text="ZRデバイス[工程タイム前回]"
                            Margin="5"
                            Grid.Row="7"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding ProsTimePreviousStartZR, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Left"
                            Grid.Row="7"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsProsTimeMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="7"
                            Grid.Column="2"/>

                        <TextBlock 
                            Text="ZRデバイス[CYタイム]"
                            Margin="5"
                            Grid.Row="8"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding CyTimeStartZR, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Left"
                            Grid.Row="8"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsCyTimeMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="8"
                            Grid.Column="2"/>

                        <TextBlock 
                            Text="Dデバイス[速度変化指令]"
                            Margin="5"
                            Grid.Row="9"
                            Grid.Column="0"/>
                        <TextBox
                            Text="{Binding CylinderDeviceStartD, UpdateSourceTrigger=PropertyChanged}"
                            Width="100" Margin="5"
                            PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                            HorizontalAlignment="Left"
                            Grid.Row="9"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="出力" 
                            IsChecked="{Binding IsCyTimeMemory, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="9"
                            Grid.Column="2"/>

                        <!-- 進捗バー -->
                        <ProgressBar 
                            Height="20" 
                            VerticalAlignment="Center" 
                            Minimum="0" 
                            Maximum="{Binding MemoryProgressMax}" 
                            Value="{Binding MemoryProgressValue}" 
                            Margin="0,0,5,0"
                            Grid.Row="10"
                            Grid.Column="0"/>
                        <Button 
                            Content="メモリ設定" 
                            Command="{Binding MemorySettingCommand}" 
                            Width="100" 
                            Margin="5" 
                            HorizontalAlignment="Right"
                            Grid.Row="10"
                            Grid.Column="1"/>
                        <!-- 状態メッセージ表示（ボタン右） -->
                        <TextBlock 
                            Text="{Binding MemoryStatusMessage}" 
                            VerticalAlignment="Center" 
                            Foreground="DarkBlue" 
                            FontWeight="Bold" 
                            Margin="10,0,10,0"
                            Grid.Row="11"
                            Grid.Column="0"/>
                        <Button 
                            Content="工程出力" 
                            Command="{Binding ProcessOutputCommand}" 
                            Width="100" 
                            Margin="5" 
                            HorizontalAlignment="Right"
                            Grid.Row="11"
                            Grid.Column="1"/>
                        <CheckBox 
                            Content="デバッグモード" 
                            IsChecked="{Binding IsDebug, Mode=TwoWay}"
                            Margin="5" 
                            HorizontalAlignment="Left"
                            Grid.Row="11"
                            Grid.Column="2"/>
                    </Grid>
                    <!---->
                </GroupBox>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
