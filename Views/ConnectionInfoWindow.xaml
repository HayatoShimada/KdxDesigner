<Window x:Class="KdxDesigner.Views.ConnectionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="接続情報" 
        Height="200" Width="400"
        MinHeight="150" MinWidth="300"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Topmost="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 接続情報表示エリア -->
        <Border Grid.Row="0" Background="LightGray" Margin="10" CornerRadius="5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="接続の関係" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="LightBlue" CornerRadius="3" Padding="10,5">
                        <TextBlock Text="{Binding SelectedConnection.FromNode.DisplayName}" FontSize="14"/>
                    </Border>
                    <TextBlock Text=" → " FontSize="20" VerticalAlignment="Center" Margin="10,0"/>
                    <Border Background="LightGreen" CornerRadius="3" Padding="10,5">
                        <TextBlock Text="{Binding SelectedConnection.ToNode.DisplayName}" FontSize="14"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- ボタンエリア -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="削除" Command="{Binding DeleteSelectedConnectionCommand}" 
                    Width="80" Height="30" Margin="5" Background="LightCoral"/>
            <Button Content="閉じる" Click="CloseButton_Click" 
                    Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>